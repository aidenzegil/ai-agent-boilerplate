{
    "openapi": "3.0.0",
    "info": {
        "title": "User",
        "description": "Wetpages's User API. This API validates offer terms for applications created externally.",
        "termsOfService": "https://dev.velocity.baby/termsOfService",
        "contact": {
            "name": "Wetpages API Support",
            "url": "https://wetpages.com/support",
            "email": "support@Wetpages.com"
        },
        "license": {
            "name": "None"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/test": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Validate Offer",
                "description": "This path validates a single offer for an application.",
                "operationId": "validateOffer",
                "parameters": [],
                "requestBody": {
                    "description": "Test Body",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "identifier": {
                                        "title": "User Identifier",
                                        "description": "One of the following identifiers must be present to ID the application",
                                        "type": "object",
                                        "minProperties": 1,
                                        "properties": {
                                            "userId": {
                                                "title": "User ID",
                                                "description": "A Wetpages user uniquie identifier.",
                                                "type": "string",
                                                "example": "cb7035e4-366f-4c05-99d1-e49c94569762",
                                                "x-tags": [
                                                    "Common"
                                                ]
                                            },
                                            "email": {
                                                "title": "Email",
                                                "description": "An email address.",
                                                "type": "string",
                                                "example": "jordon@wetpages.com",
                                                "x-tags": [
                                                    "Common"
                                                ]
                                            }
                                        }
                                    }
                                },
                                "required": [
                                    "identifier"
                                ],
                                "type": "object"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Expected response to a valid request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "user": {
                                            "title": "user",
                                            "description": "The logged in user.",
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "description": "The logged in user's id.",
                                                    "title": "id",
                                                    "type": "string"
                                                }
                                            },
                                            "x-meta-description": "The body properties appended by our authentication middleware. in brief: `{user: {id: string}`"
                                        }
                                    },
                                    "required": [
                                        "user"
                                    ],
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "An unexpected error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "A standard error object.",
                                    "properties": {
                                        "code": {
                                            "type": "string"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "code"
                                    ],
                                    "title": "Error",
                                    "type": "object",
                                    "x-tags": [
                                        "Common"
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "servers": [
        {
            "url": "https://{env}.wetpages.com/user",
            "description": "Wetpages User API",
            "variables": {
                "env": {
                    "default": "dev",
                    "description": "This value is used to determine the test environment"
                }
            }
        }
    ]
}