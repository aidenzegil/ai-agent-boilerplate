{
  "plugins": ["@stylistic/js", "@stylistic/ts"],
  "rules": {
    "@stylistic/ts/indent": [
      "warn",
      2,
      {
        "SwitchCase": 1,
        "offsetTernaryExpressions": true
      }
    ],
    "@stylistic/js/linebreak-style": ["warn", "unix"],
    "@stylistic/ts/lines-between-class-members": [
      "warn",
      {
        "enforce": [
          { "blankLine": "always", "prev": "*", "next": "*" },
          { "blankLine": "never", "prev": "*", "next": "field" }
        ]
      }
    ]
  }
}
